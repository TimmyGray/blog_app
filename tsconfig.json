{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "alwaysStrict": true,
    "declaration": false,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2020",
    "lib": [ "ES2020", "DOM" ],
    "sourceMap": true,
    "typeRoots": [ "node_modules/@types" ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}
